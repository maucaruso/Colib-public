<div id="middle">
    <div class="header-menu">
        <div class="register-mensage">
            <a class="btn-new style-button" href="/biblioteca/">Voltar à Biblioteca</a>
            {{>widgets/wellcome_msg}}
        </div>
        {{>widgets/search_bar}}
    </div>

    {{>msg}}
 
    <div class="content library-details">
        <h2>Informações do Livro</h2>
        <div class="book-details">
            <div class="left">
                <div class="cover">
                    <img src="{{book.cover}}" alt="{{book.cover}}">
                </div>
            </div>
            <div class="right details">
                <div class="line">
                    <p class="title">Título</p>
                    <h1>{{book.name}}</h1>
                </div>
                <div class="line">
                    <p class="title">Autor</p>
                    <p class="info">{{book.author}}</p>
                </div>
                <div class="line description">
                    <p class="title">Descrição</p>
                    <p class="info">{{book.description}}</p>
                </div>
                <div class="line download-btns">
                    {{#if book.file_pdf}}
                        <a target="_blank" href="{{book.file_pdf}}" class="download-btn style-button button-blue">Baixar Livro PDF</a>
                    {{/if}}
                    {{#if book.file_epub}}
                        <a target="_blank" href="{{book.file_epub}}" class="download-btn style-button button-blue">Baixar Livro Epub</a>
                    {{/if}}
                    {{#if book.file_mobi}}
                        <a target="_blank" href="{{book.file_mobi}}" class="download-btn style-button button-blue">Baixar Livro Mobi</a>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{>ads}}
</div>