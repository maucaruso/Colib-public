<div id="middle">
    <div class="header-menu">
        <a class="btn-new style-button" href="/artigos/">Voltar aos Artigos</a>
        <form class="seach">
            <input type="text" class="search-input style-input" placeholder="Pesquisar">
            <button class="search-button"><img src="/img/svg/loupe.svg" alt="Pesquisar"></button>
        </form>
    </div>

    <div class="content article">
       <h1 class="post-title">{{post.title}}</h1>
       <p class="post-infos">Data: {{post.date}} | Hashtags: {{post.hashtags}}</p>
       <div class="content-post">
            {{post.content}}
       </div>
        
    </div>
    {{>ads}}
</div>

<script>
    var string = "{{post.content}}",
    results = document.querySelector(".content-post");
    results.innerHTML = string;
    results.innerHTML = results.textContent;
</script>