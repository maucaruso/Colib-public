</head>
<body>
    {{#if_adm}}
        {{>admin/header}}
        {{{body}}}
        {{>admin/footer}}
    {{else}}
        {{#if_user}}
            {{>user/header}}
            {{{body}}}
            {{>user/footer}}    
        {{else}}
            {{>site/header}}
            {{{body}}}
            {{>site/footer}}
        {{/if_user}}
        
    {{/if_adm}}
</body>

<script src="/js/actions.js"></script>

</html>